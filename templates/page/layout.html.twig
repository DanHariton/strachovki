<!doctype html>
<html lang="cz">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{% endblock %}</title>

    {% block css %}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.3/css/intlTelInput.min.css">
        <link rel="stylesheet" href="{{ asset('assets/page/app.css') }}">
    {% endblock %}
</head>
<body class="{% block body_class %}{% endblock %}">
{% block body %}{% endblock %}
{% block js %}
    <script src="{{ asset('assets/page/app.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.3/js/intlTelInput.js"></script>
    <script>
        let input = document.querySelector("#insurance_clientMobile");
        window.intlTelInput(input, {
            utilsScript: 'https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.3/js/utils.min.js',
            preferredCountries: ['cz', 'ru', 'ua', 'by', 'kz'],
            autoFormat: true,
            nationalMode: true
        });
        let inputInsurant = document.querySelector("#insurance_mobileInsurant");
        window.intlTelInput(inputInsurant, {
            utilsScript: 'https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.3/js/utils.min.js',
            preferredCountries: ['cz', 'ru', 'ua', 'by', 'kz'],
            autoFormat: true,
            nationalMode: true
        });
    </script>
    <script>new WOW().init();</script>
{% endblock %}
</body>
</html>