{% extends 'page/layout.html.twig' %}

{% block title %}Застрахуй.cz{% endblock %}

{% block body %}
    {% include 'page/components/header.html.twig' %}

    <section class="container">
        <h1 class="margin-bottom-50 margin-top-50 font-semi-bold text-center">
            {{ 'page.insurances.text'|trans }} <strong class="color-red">Ergo</strong>
        </h1>

        <div class="row d-flex justify-content-around margin-bottom-70">
            <div class="flip-card flip-card-options-insurance col-sm-5">
                <div class="flip-card-inner custom-border-red pt-5 pb-5">
                    <div class="flip-card-front">
                        <a class="service-link text-decoration-none" href="{{ path('page_apply_insurance', {'name': 'ergo', 'type': 'complex'}) }}">
                            <img src="{{ asset('assets/page/img/ergo-logo.png') }}" alt="ergo logo" class="img-fluid pt-3 w-75">
                            <p class="mt-1 mb-0 font-semi-bold color-red">{{ 'page.insurances.komplexInsurance'|trans }}</p>
                        </a>
                    </div>
                    <div class="flip-card-back">
                        <a class="service-link text-decoration-none d-flex align-items-center flex-column" href="{{ path('page_apply_insurance', {'name': 'ergo', 'type': 'complex'}) }}">
                            <p class="mt-2 mb-0 p-2 h5 font-semi-bold color-white">
                                {{ 'page.insurances.komplexInsurance'|trans }}
                            </p>
                            <p class="mb-2 color-white font-semi-bold">{{ 'page.insurances.longTerm'|trans }}</p>
                            <p class="mb-0 color-white"><i class="color-green fas fa-check"></i> {{ 'page.insurances.shengenLegacy'|trans }}</p>
                            <p class="mb-0 color-white"><i class="color-green fas fa-check"></i> {{ 'page.insurances.ergo.maxPrice'|trans }}</p>
                            <p class="mb-0 color-white"><i class="color-green fas fa-check"></i> {{ 'page.insurances.legacy'|trans }}</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="background-red">
        <div class="container">
            <h3 class="padding-top-50 text-center text-white font-bold mb-4">{{ 'page.insurances.ergo.textWhyInsurance'|trans }}</h3>
            <p class="text-justify text-white mb-3">{{ 'page.insurances.ergo.text1'|trans }}</p>
            <p class="text-justify text-white mb-3">{{ 'page.insurances.ergo.text2'|trans }}</p>
            <p class="h5 text-justify text-white text-center font-bold padding-bottom-50">{{ 'page.insurances.ergo.text3'|trans }}</p>
        </div>
    </section>
    <section class="container">
        <h2 class="font-semi-bold text-center mt-5 mb-4">{{ 'page.insurances.whatCanInsurance'|trans }}</h2>
        <table class="table">
            <thead>
            <tr>
                <th scope="col" class="align-middle border-table-red">{{ 'page.insurances.maxima.table.scope'|trans }}</th>
                <th scope="col" class="w-25 text-center font-semi-bold border-table-red">
                    Komplex
                </th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th scope="row" class="align-middle">{{ 'page.insurances.ergo.table.row8'|trans }}</th>
                <td class="align-middle text-center color-green table-check"><i class="fas fa-check"></i></td>
            </tr>
            <tr>
                <th scope="row" class="align-middle">{{ 'page.insurances.ergo.table.row1'|trans }}</th>
                <td class="align-middle text-center">80 000 €</td>
            </tr>
            <tr>
                <th scope="row" class="align-middle">{{ 'page.insurances.ergo.table.row2'|trans }}</th>
                <td class="align-middle text-center">80 000 €</td>
            </tr>
            <tr>
                <th scope="row" class="align-middle">{{ 'page.insurances.ergo.table.row3'|trans }}</th>
                <td class="text-center align-middle">80 000 €</td>
            </tr>
            <tr>
                <th scope="row" class="align-middle">{{ 'page.insurances.ergo.table.row4'|trans }}</th>
                <td class="text-center align-middle">6 000 Kč</td>
            </tr>
            <tr>
                <th scope="row" class="align-middle">{{ 'page.insurances.ergo.table.row5'|trans }}</th>
                <td class="text-center align-middle">6 000 Kč</td>
            </tr>
            <tr>
                <th scope="row" class="align-middle">{{ 'page.insurances.ergo.table.row9'|trans }}</th>
                <td class="text-center color-green align-middle table-check"><i class="fas fa-check"></i></td>
            </tr>
            <tr>
                <th scope="row" class="align-middle">{{ 'page.insurances.ergo.table.row6'|trans }}</th>
                <td class="text-center color-green table-check align-middle"><i class="fas fa-check"></i>*</td>
            </tr>
            <tr>
                <th scope="row" class="align-middle">{{ 'page.insurances.ergo.table.row11'|trans }}</th>
                <td class="align-middle text-center color-red table-check"><i class="fas fa-times"></i></td>
            </tr>
            <tr>
                <th scope="row" class="align-middle">{{ 'page.insurances.ergo.table.row10'|trans }}</th>
                <td class="text-center color-green table-check"><i class="fas fa-check"></i></td>
            </tr>
            <tr>
                <th scope="row" class="align-middle">{{ 'page.insurances.ergo.table.row7'|trans }}</th>
                <td class="text-center color-green table-check"><i class="fas fa-check"></i>****</td>
            </tr>
            </tbody>
        </table>
        <p class="mt-5 text-center mb-2">{{ 'page.insurances.ergo.table.more'|trans }}</p>
        <p class="text-center mb-5">{{ 'page.insurances.ergo.table.more1'|trans }}</p>
    </section>
    {% include 'page/components/footer.html.twig' %}

{% endblock %}

