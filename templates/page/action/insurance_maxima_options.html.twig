                <div class="flip-card-inner custom-border-red pt-5 pb-5">
                    <div class="flip-card-front">
                        <a class="service-link text-decoration-none" href="{{ path('page_apply_insurance', {'name': 'maxima'}) }}">
                            <img src="{{ asset('assets/page/img/logo-zastrachuj.png') }}" alt="order bank" class="img-fluid pt-5">
