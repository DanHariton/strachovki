{% extends 'page/layout.html.twig' %}

{% block description %}{{ 'description.index'|trans }}{% endblock %}
{% block keywords %}{{ 'keywords.index'|trans }}{% endblock %}
{% block title %}{{ 'tittle.index'|trans }}{% endblock %}

{% block body %}
    {% include 'page/components/header.html.twig' %}

    <section id="main-slider">
        <div  class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div id="carousel-home" class="carousel-item active" style="position: relative">
                    <h1 class="carusel-text-1 font-semi-bold">
                        {{ 'page.carusel.text1'|trans }}
                    </h1>
                    <h1 class="carusel-text-2 font-semi-bold">
                        {{ 'page.carusel.text2'|trans }}
                    </h1>
                    <h1 class="carusel-text-3 font-semi-bold">
                        {{ 'page.carusel.text3'|trans }}
                    </h1>
                    <h1 class="carusel-text-4 font-semi-bold">
                        {{ 'page.carusel.text4'|trans }}
                    </h1>
                    <h1 class="carusel-text-5 font-semi-bold">
                        {{ 'page.carusel.text5'|trans }}
                    </h1>
                    <img src="{{ asset('assets/page/img/insurance-slide-1.jpg') }}" class="d-block w-100" alt="...">
                </div>
            </div>
        </div>
    </section>
    <section class="pt-5 pb-5 background-red">
        <div class="container">
            <h1 class="margin-bottom-30 text-center font-semi-bold text-white text-uppercase">{{ 'page.whyWe.mainText'|trans }}</h1>
            <div class="h4 d-flex flex-row align-items-center mb-3">
                <i class="color-green fas fa-check-double mr-3"></i> <p class="mb-0 text-white">{{ 'page.whyWe.part1'|trans }}</p>
            </div>
            <div class="h4 d-flex flex-row align-items-center mb-3">
                <i class="color-green fas fa-check-double mr-3"></i>
                <p class="mb-0 text-white">{{ 'page.whyWe.part2'|trans }} <strong>(Maxima, Uniqa, pVZP, Ergo)</strong>.</p>
            </div>
            <div class="h4 d-flex flex-row align-items-center mb-3">
                <i class="color-green fas fa-check-double mr-3"></i> <p class="text-white mb-0">{{ 'page.whyWe.part3'|trans }}</p>
            </div>
            <div class="h4 d-flex flex-row align-items-center mb-3">
                <i class="color-green fas fa-check-double mr-3"></i> <p class="text-white mb-0">{{ 'page.whyWe.part4'|trans }}</p>
            </div>
            <div class="h4 d-flex flex-row align-items-center mb-3">
                <i class="color-green fas fa-check-double mr-3"></i> <p class="text-white mb-0">{{ 'page.whyWe.part5'|trans }}</p>
            </div>
            <div class="h4 d-flex flex-row align-items-center">
                <i class="color-green fas fa-check-double mr-3"></i> <p class="text-white mb-0">{{ 'page.whyWe.part6'|trans }}</p>
            </div>
        </div>
    </section>
    <div class="container">
        <section id="manufacture" class="text-center margin-bottom-70 margin-top-50">
            <h1 class="margin-bottom-30 font-semi-bold text-uppercase">Наши услуги</h1>

            <div class="row d-flex justify-content-around margin-bottom-70 our-services">
                <div class="flip-card flip-card-index col-sm-3">
                    <div class="flip-card-inner custom-border-red pt-5 pb-5">
                        <div class="flip-card-front">
                            <a class="service-link text-decoration-none" href="{{ path('page_insurance_options') }}">
                                <img src="{{ asset('assets/page/img/buy-insurance.jpg') }}" alt="order insurance online" class="img-fluid pt-5">
                                <p class="mt-4 mb-0 font-bold color-red">Страхование инострацев</p>
                            </a>
                        </div>
                        <div class="flip-card-back">
                            <a class="service-link text-decoration-none" href="{{ path('page_insurance_options') }}">
                                <img src="{{ asset('assets/page/img/order-insurance.jpg') }}" alt="order insurance online" class="img-fluid pt-5">
                                <p class="mt-4 mb-0 font-bold text-white">Страхование инострацев</p>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="flip-card flip-card-index col-sm-3">
                    <div class="flip-card-inner custom-border-red pt-5 pb-5">
                        <div class="flip-card-front">
                            <a class="service-link text-decoration-none" href="{{ path('page_medical_support') }}">
                                <img src="{{ asset('assets/page/img/medical-support2.jpg') }}" alt="order insurance online" class="img-fluid pt-5">
                                <p class="mt-4 mb-0 font-bold color-red">Услуга «Медицинское сопровождение»</p>
                            </a>
                        </div>
                        <div class="flip-card-back">
                            <a class="service-link text-decoration-none" href="{{ path('page_medical_support') }}">
                                <img src="{{ asset('assets/page/img/medical-support1.jpg') }}" alt="order insurance online" class="img-fluid pt-5">
                                <p class="mt-4 mb-0 font-bold text-white">Услуга «Медицинское сопровождение»</p>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="flip-card flip-card-index col-sm-3">
                    <div class="flip-card-inner custom-border-red pt-5 pb-5">
                        <div class="flip-card-front">
                            <a class="service-link text-decoration-none" href="{{ path('page_bank_reference') }}">
                                <img src="{{ asset('assets/page/img/bank-account-help.jpg') }}" alt="order bank" class="img-fluid pt-5">
                                <p class="mt-4 mb-0 font-bold color-red">Помощь в получении банковских справок</p>
                            </a>
                        </div>
                        <div class="flip-card-back">
                            <a class="service-link text-decoration-none" href="{{ path('page_bank_reference') }}">
                                <img src="{{ asset('assets/page/img/bank-account.jpg') }}" alt="order bank" class="img-fluid pt-5">
                                <p class="mt-4 mb-0 font-bold text-white">Помощь в получении банковских справок</p>
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </section>
    </div>
    <section id="contactUs" class="pt-5 pb-5 background-red">
        <div class="container">
            <h2 class="text-center text-white font-semi-bold mb-4 pt-3 text-uppercase">Получите больше информации по телефону</h2>
            <p class="text-center text-white mb-3">
                Оставьте нам свой номер телефона и мы ответим на все интересуещие Вас вопросы.
            </p>
            <div class="row d-flex justify-content-center">
                {{ form_start(form) }}
                    <div>
                        {{ form_errors(form) }}
                    </div>

                    <div class="d-flex flex-row let-phone">
                        <div class="rotate mr-4">
                            {{ form_row(form.mobile) }}
                        </div>
                        <div class="rotate">
                            {{ form_row(form.save) }}
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
    <div class="container">
        <section class="pt-5 pb-5 text-center">
            <h2 class="text-center font-semi-bold mb-5 pt-3 text-uppercase">Узнать больше</h2>

            <div class="row">
                <div class="col-12 col-sm-4">
                    <a class="model-link" href="{{ path('page_our_license') }}">
                        <img src="{{ asset('assets/page/img/order-online.png') }}" alt="order online" class="img-fluid">
                        <p class="mt-4">Проверить лицензию</p>
                    </a>
                </div>
                <div class="col-12 col-sm-4">
                    <a class="model-link" href="{{ path('page_faq') }}">
                        <img src="{{ asset('assets/page/img/faq.png') }}" alt="faq" class="img-fluid">
                        <p class="mt-4">Часто задаваемые вопросы</p>
                    </a>
                </div>
                <div class="col-12 col-sm-4">
                    <a class="model-link" href="{{ path('page_contact') }}">
                        <img src="{{ asset('assets/page/img/our-office.png') }}" alt="our office" class="img-fluid">
                        <p class="mt-4">Посетите наш офис</p>
                    </a>
                </div>
            </div>
        </section>
    </div>
    {% include 'page/components/footer.html.twig' %}

{% endblock %}

